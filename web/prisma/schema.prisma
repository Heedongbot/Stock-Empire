// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Tier {
  FREE
  VIP
  VVIP
}

enum BillingCycle {
  MONTHLY
  YEARLY
}

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
  REFUNDED
}

enum SubscriptionStatus {
  ACTIVE
  CANCELED
  EXPIRED
  PAST_DUE
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  image         String?
  role          String    @default("USER")
  rank          String    @default("TRAINEE") // e.g., CORPORAL, SERGEANT, etc.
  
  // Relations
  subscription  Subscription?
  payments      Payment[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Subscription {
  id            String             @id @default(cuid())
  userId        String             @unique
  user          User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  tier          Tier               @default(FREE)
  billingCycle  BillingCycle       @default(MONTHLY)
  status        SubscriptionStatus @default(ACTIVE)
  
  startDate     DateTime           @default(now())
  endDate       DateTime?          // Null for indefinite or auto-renewing
  nextBillingDate DateTime?
  
  createdAt     DateTime           @default(now())
  updatedAt     DateTime           @updatedAt
}

model Payment {
  id              String        @id @default(cuid())
  userId          String
  user            User          @relation(fields: [userId], references: [id])
  
  amount          Decimal       @db.Decimal(10, 2)
  currency        String        @default("KRW")
  status          PaymentStatus @default(PENDING)
  
  paymentMethod   String?       // e.g., "TOSS", "CARD", "PAYPAL"
  transactionId   String?       @unique // ID from the payment gateway
  
  billingCycle    BillingCycle
  tier           Tier
  
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
}
