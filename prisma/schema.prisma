// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum Tier {
  FREE
  PRO
}

enum BillingCycle {
  MONTHLY
  YEARLY
}

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
  REFUNDED
}

enum SubscriptionStatus {
  ACTIVE
  CANCELED
  EXPIRED
  PAST_DUE
}

model User {
  id            String    @id @default(cuid())
  clerkId       String?   @unique // Clerk User ID (e.g., user_2n...)
  email         String    @unique
  name          String?
  image         String?
  role          String    @default("USER") // USER, ADMIN
  rank          String    @default("TRAINEE") // e.g., CORPORAL, SERGEANT, GENERAL
  
  // Relations
  subscription  Subscription?
  payments      Payment[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model News {
  id            String    @id @default(cuid())
  source        String    // Yahoo, Investing, Naver
  title         String
  title_kr      String?   // Translated title
  summary_kr    String?   // AI Summary
  link          String    @unique
  published_at  DateTime
  crawled_at    DateTime  @default(now())
  
  sentiment     String    // BULLISH, BEARISH, NEUTRAL
  impact_score  Int       @default(50)
  
  is_breaking   Boolean   @default(false)
  
  // JSON field for flexible extra data (AI analysis results)
  ai_analysis   Json?
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Subscription {
  id            String             @id @default(cuid())
  userId        String             @unique
  user          User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  tier          Tier               @default(FREE)
  billingCycle  BillingCycle       @default(MONTHLY)
  status        SubscriptionStatus @default(ACTIVE)
  
  startDate     DateTime           @default(now())
  endDate       DateTime?          // Null for indefinite or auto-renewing
  nextBillingDate DateTime?
  
  createdAt     DateTime           @default(now())
  updatedAt     DateTime           @updatedAt
}

model Payment {
  id              String        @id @default(cuid())
  userId          String
  user            User          @relation(fields: [userId], references: [id])
  
  amount          Decimal       @db.Decimal(10, 2)
  currency        String        @default("KRW")
  status          PaymentStatus @default(PENDING)
  
  paymentMethod   String?       // e.g., "TOSS", "CARD", "PAYPAL"
  transactionId   String?       @unique // ID from the payment gateway
  
  billingCycle    BillingCycle
  tier           Tier
  
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
}
